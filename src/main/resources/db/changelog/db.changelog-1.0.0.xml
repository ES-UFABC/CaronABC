<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet  author="CaronABC"  id="Initial DB setup to store credentials">
        <createSequence sequenceName="CARONA_CREDENTIALS_SEQUENCE" incrementBy="1"/>
        <createTable tableName="CARONA_CREDENTIALS">
            <column name="ID" type="NUMBER(35)">
                <constraints nullable="false" primaryKey="true" unique="true"/>
            </column>
            <column name="EMAIL" type="VARCHAR(255)">
                <constraints  nullable="false" unique="true"/>
            </column>
            <column name="SENHA" type="VARCHAR(255)">
                <constraints  nullable="false"/>
            </column>
            <column name="RA" type="NUMBER(35)">
                <constraints  nullable="false" unique="true"/>
            </column>
            <column name="NOME" type="VARCHAR(255)">
                <constraints  nullable="false"/>
            </column>
            <column name="SOBRENOME" type="VARCHAR(255)">
                <constraints  nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>